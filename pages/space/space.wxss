/* pages/space/space.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.title{
  font-size: 50rpx;
  font-weight: 900;
  color: rgb(30, 145, 165);
  text-align: center
}
.button2{
  background: #d6f3f1;
  border-color: #000000;
  width: 700rpx;
  height:100rpx;
  font-size: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.bottomtext{
  color: #ff0000;
  font-size: 24rpx
}
#box{
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 100%;
}
#background{
  opacity: 0.5;
  background-color: #000000;
  width: 100%;
  min-height: 100vh;
  position: absolute;
}
#window{
  opacity: 1;
  position: absolute;
  width: 80%;
  margin-top: 52%;
  margin-left: 10%;
  background-color: white;
  border-radius: 15rpx;
}
#titlebackground{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: white;  
  height: 90rpx
}
#titletext{
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  color: black;
  margin-top: 30rpx;
  font-size: 34rpx;
}
#boxcontent{
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100rpx;
}
#password{
  border: 4rpx solid  rgb(200, 200, 200);
  background-color: rgb(241, 241, 241);
  font-size: 34rpx;
  margin-top: 15rpx;
  width: 80%;
  height: 45rpx;
}
#boxbtn{
  display: flex;
}
#btn1{
  width: 50%;
  background-color: white;
  color: black;
  border-radius: 0%;
  border-color: white;
  border-top-color: gray;
}
#btn2{
  width: 50%;
  background-color: white;
  color: #616b8f;
  border-radius: 0%;
  border-color: white;
  border-top-color: gray;
}